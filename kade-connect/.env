# Development Environment Variables for Kade Connect

# Database Configuration (using SQLite for development)
DATABASE_URL=sqlite:///./kade_connect_dev.db
REDIS_URL=redis://localhost:6379

# Development flags
DEBUG=True
ENVIRONMENT=development
LOG_LEVEL=INFO

# Security (development only - change for production)
SECRET_KEY=development_secret_key_change_in_production_minimum_32_characters_long
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# AI Service API Keys (optional for development)
OPENAI_API_KEY=your_openai_api_key_here
GOOGLE_VISION_API_KEY=your_google_vision_api_key_here
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Message Queue
RABBITMQ_URL=amqp://guest:guest@localhost:5672/
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# CORS for development
CORS_ORIGINS=["http://localhost:3000", "http://localhost:19006", "exp://localhost:19000"]

# File Upload
MAX_FILE_SIZE=52428800
UPLOAD_DIR=uploads
ALLOWED_EXTENSIONS=[".jpg", ".jpeg", ".png", ".gif", ".webp"]

# Optional API Keys (can be added later)
STRIPE_PUBLIC_KEY=
STRIPE_SECRET_KEY=
SUPABASE_URL=
SUPABASE_ANON_KEY=
SUPABASE_SERVICE_KEY=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=ap-south-1
AWS_S3_BUCKET=
SENTRY_DSN=
